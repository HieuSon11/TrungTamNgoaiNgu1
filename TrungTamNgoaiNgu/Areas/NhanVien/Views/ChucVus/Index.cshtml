@model IEnumerable<MyTTNN.TrungTamNgoaiNgu.ChucVu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/NhanVien/Views/Shared/_NhanVienLayout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Chức Vụ</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Chức Vụ</a></li>
                    <li class="active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">
                        <div class="col-md-6">
                            <h2><strong class="card-title">Index</strong></h2>
                        </div>
                        <div class="col-md-6 text-right">
                            @*<a class="btn btn-success" data-toggle="modal" data-target="#ModalCreateUpdate">
                                <i class="fa fa-plus" aria-hidden="true"> Thêm mới</i>
                            </a>*@
                            <a href="@Url.Action("Create", "ChucVus")" class="btn btn-success">
                                    <i class="fa fa-plus" aria-hidden="true"> Thêm mới</i>
                                </a>
                            <a  href="@Url.Action("Trash", "ChucVus")" class="btn btn-danger"><i class=" fa fa-trash-o"></i></a>
                        </div>
                    </div>

                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenCv)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiTao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiCapNhat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThoiGianTao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThoiGianCapNhat)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.TrangThai == 1)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenCv)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NguoiTao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NguoiCapNhat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThoiGianTao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThoiGianCapNhat)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Status", "ChucVus", new { @id = item.MaCv })" class="btn btn-danger">
                                                    <i class="fa fa-power-off" aria-hidden="true"></i>
                                                </a>&nbsp;
                                                <a class="btn btn-warning" href="@Url.Action("Edit", "ChucVus", new { id = item.MaCv })">
                                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                </a>&nbsp;
                                                <a class="btn btn-info" href="@Url.Action("Details", "ChucVus", new { id = item.MaCv })">
                                                    <i class="fa fa-info" aria-hidden="true"></i>
                                                </a>&nbsp;
                                                <a class="btn btn-danger" href="@Url.Action("DelTrash", "ChucVus", new { id = item.MaCv })">
                                                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->


    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">
                        <h3><strong class="card-title">Tạm thời ngưng hoạt động</strong></h3>
                        <a actio><i class="fa fa-add"></i></a>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenCv)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiTao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiCapNhat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThoiGianTao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThoiGianCapNhat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TrangThai)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    if (item.TrangThai == 2)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TenCv)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NguoiTao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NguoiCapNhat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThoiGianTao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ThoiGianCapNhat)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TrangThai)
                                            </td>
                                            <td>

                                                <a href="@Url.Action("Status", "ChucVus", new {@id = item.MaCv})" class="btn btn-danger">
                                                    <i class="fa fa-toggle-on" aria-hidden="true"></i>
                                                </a>

                                            </td>
                                        </tr>

                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->


</div><!-- .content -->


<!-- Modal -->
<div class="modal fade" id="ModalCreateUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm mới chức vụ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>Tên chức vụ</label>
                        <input type="text" class="form-control" id="TenChucVu" placeholder="Nhập tên chức vụ">
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnLuu">Tạo</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#btnLuu').click(function () {
                var tencv = $('#TenChucVu').val();
                var modal = {
                    TenCv: tencv
                };
                $.ajax({
                    URL: '/NhanVien/ChucVus/Add',
                    type: 'POST',
                    data: modal,
                    success: function (res) {
                        alert('dc roi')
                        if (res.success) {
                            window.location.reload();
                        }
                    }
                });
            });
        });
    </script>

}