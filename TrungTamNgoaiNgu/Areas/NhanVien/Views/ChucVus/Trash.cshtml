@model IEnumerable<MyTTNN.TrungTamNgoaiNgu.ChucVu>

@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/NhanVien/Views/Shared/_NhanVienLayout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Chức vụ</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Chức Vụ</a></li>
                    <li class="active">Thùng rác</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header row">

                        <div class="col-md-6">
                            <h2><strong class="card-title">Thùng trác</strong></h2>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index", "ChucVus")" class="btn btn-default">
                                Trở về
                            </a>
                            
                        </div>

                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenCv)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiTao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NguoiCapNhat)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThoiGianTao)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ThoiGianCapNhat)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenCv)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NguoiTao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NguoiCapNhat)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGianTao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGianCapNhat)
                                        </td>

                                        <td>

                                            <a href="@Url.Action("Delete", "ChucVus", new {@id = item.MaCv})" class="btn btn-danger">
                                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                            </a>
                                            <a href="@Url.Action("DelTrash", "ChucVus", new {@id = item.MaCv})" class="btn btn-info">
                                                <i class="fa fa-undo" aria-hidden="true"></i>
                                            </a>

                                        </td>
                                    </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->


</div><!-- .content -->


